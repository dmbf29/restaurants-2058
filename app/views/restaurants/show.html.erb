<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= "*" * @restaurant.rating %></p>
  <p>
    <%= link_to "Back", restaurants_path, class: 'btn btn-secondary'  %>
    <%= link_to restaurants_path, class: 'btn btn-secondary' do  %>
      <i class="fa-solid fa-house"></i>
    <% end %>
    <%= link_to restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "Delete #{@restaurant.name}?" }, class: 'btn btn-secondary' do %>
      <i class="fa-solid fa-circle-xmark"></i>
    <% end %>
  </p>
</div>
